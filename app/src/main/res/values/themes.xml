<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArnavEnterprise" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryVariant">@color/colorBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="Theme.ArnavEnterprise.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ArnavEnterprise.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ArnavEnterprise.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="cardBackground">
        <item name="android:src">@drawable/rectangle</item>
    </style>
    <style name="labelColor">
        <item name="android:textColor">@color/colorPinkDark</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/colorBlue</item> <!-- Light mode color -->
    </style>
</resources>